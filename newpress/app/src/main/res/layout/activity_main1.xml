<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:id="@+id/rel_tree"
              android:orientation="vertical"
              android:fitsSystemWindows="true"
              android:background="@color/bg_translate"
    >

    <FrameLayout
        android:id="@+id/tab_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />
    <View
        android:id="@+id/line"
        style="@style/line_style"
        />
    <LinearLayout
        android:id="@+id/main_tab2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    <LinearLayout
        android:id="@+id/main_tab"
        android:layout_width="match_parent"
        android:layout_height="110px"
        android:orientation="horizontal"
        android:background="@color/bg_white"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:id="@+id/home_ll_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/home_iv_home"
                android:layout_width="48px"
                android:layout_height="48px"
                android:src="@drawable/tab_home1"
                />

            <TextView
                android:id="@+id/home_tv_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="首页"
                android:textColor="@drawable/tab_btn_text_color"
                android:textSize="@dimen/text_size_2"
                android:layout_marginTop="4px"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/home_ll_find"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/home_iv_find"
                android:layout_width="48px"
                android:layout_height="48px"
                android:src="@drawable/tab_message"
                />

            <TextView
                android:id="@+id/home_tv_find"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="消息"
                android:textColor="@drawable/tab_btn_text_color"
                android:textSize="@dimen/text_size_2"
                android:layout_marginTop="4px"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/home_ll_distribute"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/home_iv_distribute"
                android:layout_width="80px"
                android:layout_height="80px"
                android:src="@drawable/tab_distribute"
                />


        </LinearLayout>
        <LinearLayout
            android:id="@+id/home_ll_circle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/home_iv_circle"
                android:layout_width="48px"
                android:layout_height="48px"
                android:src="@drawable/tab_find"
                />

            <TextView
                android:id="@+id/home_tv_circle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="圈子"
                android:textColor="@drawable/tab_btn_text_color"
                android:textSize="@dimen/text_size_2"
                android:layout_marginTop="4px"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/home_ll_mine"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/home_iv_mine"
                android:layout_width="48px"
                android:layout_height="48px"
                android:src="@drawable/tab_mine"
                />

            <TextView
                android:id="@+id/home_tv_mine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的"
                android:textColor="@drawable/tab_btn_text_color"
                android:textSize="@dimen/text_size_2"
                android:layout_marginTop="4px"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>


</LinearLayout>