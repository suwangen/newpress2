<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4A000000"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >

    <View
        android:id="@+id/view_birth"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
        android:background="#f7f7f7"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/iv_pop_birthday_cancel"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common_margin_left"
        android:text="取消"
        android:paddingBottom="@dimen/common_margin_left"
        android:paddingTop="@dimen/common_margin_left"
        android:textColor="@color/text_color_blue"
        android:textSize="16sp"
        />

    <TextView
        android:id="@+id/tv_pop_numberpicker_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="选择时间"
        android:textColor="@color/bg_black"
        android:textSize="@dimen/text_size_5"
        android:gravity="center"
        android:paddingBottom="@dimen/common_margin_left"
        android:paddingTop="@dimen/common_margin_left"
        />

    <TextView
        android:id="@+id/iv_pop_birthday_confirm"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:paddingBottom="@dimen/common_margin_left"
        android:paddingTop="@dimen/common_margin_left"
        android:layout_marginRight="@dimen/common_margin_left"
        android:textColor="@color/text_color_blue"
        android:textSize="16sp"
        android:text="完成"
        />
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f7f7f7"
        android:orientation="horizontal" >

        <kankan.wheel.widget.WheelView
            android:id="@+id/wheelview1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.35" >
        </kankan.wheel.widget.WheelView>

        <kankan.wheel.widget.WheelView
            android:id="@+id/pop_numberpicker_birthdate_year"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >
        </kankan.wheel.widget.WheelView>

        <kankan.wheel.widget.WheelView
            android:id="@+id/wheelview2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1" >
        </kankan.wheel.widget.WheelView>

        <kankan.wheel.widget.WheelView
            android:id="@+id/pop_numberpicker_birthdate_month"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >
        </kankan.wheel.widget.WheelView>

        <kankan.wheel.widget.WheelView
            android:id="@+id/pop_numberpicker_birthdate_day"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >
        </kankan.wheel.widget.WheelView>

        <kankan.wheel.widget.WheelView
            android:id="@+id/wheelview3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4" >
        </kankan.wheel.widget.WheelView>
    </LinearLayout>

</LinearLayout>