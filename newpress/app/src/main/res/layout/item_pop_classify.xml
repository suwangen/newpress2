<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="42dp"
              android:gravity="center"
              android:fitsSystemWindows="true"
              android:orientation="vertical" >
    <TextView
        android:id="@+id/item_text"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:paddingLeft="@dimen/margin_distance_1"
        android:paddingRight="@dimen/margin_distance_1"
        android:text="11"
        android:gravity="center_vertical"
        android:textColor="@color/text_color_deep_gray"
        android:textSize="@dimen/text_size_2" />
    <View
        android:id="@+id/item_line"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/margin_distance_1"
        android:layout_marginRight="@dimen/margin_distance_1"
        android:layout_height="1dp"
        android:background="@color/pink" />

</LinearLayout>