<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/bg_white">
    <View
        style="@style/line_style"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_item_withdraw_time"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="2017.06.12"
            android:paddingTop="@dimen/margin_distance_2"
            android:paddingBottom="@dimen/margin_distance_2"
            android:textColor="@color/text_color_gray"
            android:textSize="@dimen/text_size_2" />
        <TextView
            android:id="@+id/tv_item_withdraw_money"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="0元"
            android:paddingTop="@dimen/margin_distance_2"
            android:paddingBottom="@dimen/margin_distance_2"
            android:textColor="@color/bg_red"
            android:textSize="@dimen/text_size_2" />
        <TextView
            android:id="@+id/tv_item_withdraw_state"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|right"
            android:text="审核"
            android:paddingRight="@dimen/margin_distance_1"
            android:paddingTop="@dimen/margin_distance_2"
            android:paddingBottom="@dimen/margin_distance_2"
            android:textColor="@color/text_color_gray"
            android:textSize="@dimen/text_size_2" />
    </LinearLayout>
</LinearLayout>