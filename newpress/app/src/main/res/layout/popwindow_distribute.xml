<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#4A000000"
              android:fitsSystemWindows="true"
              android:gravity="bottom"
              android:orientation="vertical"
    >
    <View
        android:id="@+id/pop_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/margin_distance_90"
        android:paddingBottom="@dimen/margin_distance_3"
        android:gravity="center_vertical"
        android:background="@color/bg_white"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_pop_zixun"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/distribute_zixun"
            android:drawablePadding="@dimen/margin_distance_0"
            android:text="资讯发布"
            android:gravity="center"
            android:textColor="@color/text_color_deep_gray"
            android:textSize="14sp"
            />
        <TextView
            android:id="@+id/tv_pop_class"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/distribute_class"
            android:drawablePadding="@dimen/margin_distance_0"
            android:text="课堂发布"
            android:gravity="center"
            android:textColor="@color/text_color_deep_gray"
            android:textSize="14sp"
            />
        <TextView
            android:id="@+id/tv_pop_ask"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/distribute_ask"
            android:drawablePadding="@dimen/margin_distance_0"
            android:text="提问问题"
            android:gravity="center"
            android:textColor="@color/text_color_deep_gray"
            android:textSize="14sp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/margin_distance_90"
        android:gravity="center_vertical"
        android:background="@color/bg_white"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_pop_sale"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/distribute_sale_shop"
            android:drawablePadding="@dimen/margin_distance_0"
            android:text="出售网店"
            android:gravity="center"
            android:textColor="@color/text_color_deep_gray"
            android:textSize="14sp"
            />
        <TextView
            android:id="@+id/tv_pop_jingbiao"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/distribute_jingbiao"
            android:drawablePadding="@dimen/margin_distance_0"
            android:text="竞标发布"
            android:gravity="center"
            android:textColor="@color/text_color_deep_gray"
            android:textSize="14sp"
            />
        <TextView
            android:id="@+id/tv_pop_zhiwei"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/distribute_job"
            android:drawablePadding="@dimen/margin_distance_0"
            android:text="职位发布"
            android:gravity="center"
            android:textColor="@color/text_color_deep_gray"
            android:textSize="14sp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@color/bg_white"
        android:orientation="horizontal" >
        <ImageView
            android:id="@+id/iv_pop_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/distribute_close"
            android:paddingBottom="@dimen/margin_distance_2"
            />
    </LinearLayout>
</LinearLayout>