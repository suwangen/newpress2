<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="260dp"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_stroke_gray"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/dialog_default_address_prompt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="3dp"
        android:layout_marginBottom="@dimen/margin_distance_2"
        android:layout_marginTop="@dimen/margin_distance_2"
        android:text="您当前不在wifi下\n土豪可以确定继续播放视频"
        android:gravity="center"
        android:textColor="@color/bg_black"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/et_dialog_default_address_pay_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:password="true"
        android:digits="0123456789"
        android:maxLength="6"
        android:hint="请输入支付密码"
        android:background="@null"
        android:visibility="gone"
        android:singleLine="true"
        android:layout_marginBottom="@dimen/margin_distance_0"
        android:textColor="@color/bg_black"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bg_home" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/dialog_default_address_cancele"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="@dimen/margin_distance_1"
            android:paddingTop="@dimen/margin_distance_1"
            android:text="@string/cancel"
            android:textColor="@color/text_color_gray"
            android:textSize="16sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/bg_home" />

        <TextView
            android:id="@+id/dialog_default_address_confirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="@dimen/margin_distance_1"
            android:paddingTop="@dimen/margin_distance_1"
            android:text="@string/confirm"
            android:textColor="@color/main_color_pink"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>