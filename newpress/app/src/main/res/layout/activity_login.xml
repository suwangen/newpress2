<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              style="@style/MatchAndMatch.Vertical"
              android:fitsSystemWindows="true">


    <include layout="@layout/toolbar_right"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bg_home"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_white"
        android:orientation="horizontal"
        android:paddingTop="@dimen/margin_distance_3"
        android:paddingLeft="@dimen/margin_distance_2"
        android:paddingBottom="@dimen/margin_distance_3"
        >
        <TextView
            android:id="@+id/tv_login_type_accont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/margin_distance_2"
            android:paddingTop="@dimen/margin_distance_2"
            android:text="账号登录"
            android:focusableInTouchMode="true"
            android:focusable="true"
            android:textColor="@color/text_color_little_black"
            android:textSize="@dimen/text_size_4"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/lin_bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:focusable="true"
        android:focusableInTouchMode="true"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingLeft="@dimen/margin_distance_2"
            android:paddingRight="@dimen/margin_distance_2"
            android:orientation="vertical"
            android:background="@color/bg_white"
            >

            <EditText
                android:id="@+id/login_edt_account"
                android:layout_width="match_parent"
                android:layout_height="85px"
                android:hint="请输入手机号码"
                android:drawablePadding="@dimen/margin_distance_0"
                android:background="@null"
                android:textCursorDrawable="@drawable/color_cursor"
                android:textColor="@color/text_color_gray"
                android:textColorHint="@color/text_color_light_gray"
                android:maxLength="11"
                android:textSize="@dimen/text_size_2"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/bg_home"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="85px"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/margin_distance_1"
                >
                <EditText
                    android:id="@+id/login_edt_pwd"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:drawablePadding="@dimen/margin_distance_0"
                    android:background="@null"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:textColor="@color/text_color_gray"
                    android:textColorHint="@color/text_color_light_gray"
                    android:hint="请输入密码"
                    android:maxLength="11"
                    android:textSize="@dimen/text_size_2"
                    android:inputType="textPassword"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/margin_distance_1"
                    android:layout_marginTop="@dimen/margin_distance_1"
                    android:background="@color/bg_home"
                    />
                <TextView
                    android:id="@+id/login_tv_forget_pwd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_distance_2"
                    android:text="@string/find_pwd"
                    android:textColor="@color/text_color_gray"
                    android:textSize="@dimen/text_size_2" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/bg_home"
                />
            <Button
                android:id="@+id/login_btn_login"
                style="@style/CommitButton"
                android:layout_marginTop="@dimen/dimen_50"
                android:text="@string/login" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="1"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingLeft="@dimen/dimen_24"
                android:paddingRight="@dimen/dimen_24"
                >
                <TextView
                    style="@style/WrapAndWrap"
                    android:gravity="right"
                    android:text="第三方登录"
                    android:layout_marginLeft="@dimen/common_margin_left"
                    android:layout_marginRight="@dimen/common_margin_right"
                    android:textColor="@color/text_color_gray"
                    android:textSize="@dimen/text_size_2" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:paddingTop="@dimen/dimen_40"
                android:paddingBottom="@dimen/dimen_40"
                android:orientation="horizontal"
                >
                <ImageView
                    android:id="@+id/iv_login_qq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dimen_40"
                    android:src="@drawable/logintype_qq"/>
                <ImageView
                    android:id="@+id/iv_login_wechat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/logintype_wechat"/>



            </LinearLayout>
        </LinearLayout>
    </LinearLayout>







</LinearLayout>