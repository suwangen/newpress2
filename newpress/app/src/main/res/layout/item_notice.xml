<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:fitsSystemWindows="true"
              android:layout_marginLeft="@dimen/common_margin_left"
              android:layout_marginRight="@dimen/common_margin_left"
              android:layout_marginTop="@dimen/common_margin_left"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_gray_angle"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/iv_item_notice_photo"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="1dp"
            android:scaleType="fitXY"
            android:src="@drawable/default_load_img"
            />

        <TextView
            android:id="@+id/item_notice_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_distance_1"
            android:paddingLeft="@dimen/dimen_5"
            android:lines="2"
            android:text="546546546"
            android:textColor="@color/text_color_deep_gray"
            android:textSize="@dimen/text_size_2"/>

        <TextView
            android:id="@+id/item_notice_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_distance_1"
            android:paddingLeft="@dimen/dimen_5"
            android:text="发布时间"
            android:textColor="@color/text_color_gray"
            android:textSize="@dimen/text_size_2"/>
    </LinearLayout>
</LinearLayout>