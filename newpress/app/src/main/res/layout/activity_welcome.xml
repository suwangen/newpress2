<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@drawable/invite_code_bg"
              android:gravity="center_horizontal"
    >
    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_weight="389"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="63"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_marginBottom="@dimen/margin_distance_35"
        android:src="@drawable/invite_code_text1"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <EditText
            android:id="@+id/et_invite_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/margin_distance_1"
            android:hint="请输入邀请码"
            android:textColorHint="@color/bg_white"
            android:textColor="@color/bg_white"
            android:layout_marginRight="@dimen/margin_distance_1"
            android:background="@drawable/invite_code_input_box_bg"
            />
        <TextView
            android:id="@+id/tv_splash_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开启"
            android:gravity="center"
            android:textColor="@color/bg_white"
            android:textSize="@dimen/text_size_2"
            android:background="@drawable/invite_code_open"
            />
    </LinearLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_distance_1"
        android:src="@drawable/invite_code_text2"
        />
    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_weight="100"
        />
</LinearLayout>