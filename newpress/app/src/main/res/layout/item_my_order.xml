<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/bg_white"
              android:fitsSystemWindows="true"
              android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <TextView
            android:id="@+id/iv_item_myorder_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="软件园电站(自营电桩):"
            android:padding="@dimen/margin_distance_2"
            android:textColor="@color/bg_black"
            android:textSize="@dimen/text_size_2"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bg_home"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_white"
                android:orientation="horizontal"
                android:paddingTop="@dimen/margin_distance_1"
                android:paddingLeft="@dimen/margin_distance_1"
                android:paddingRight="@dimen/margin_distance_1"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="充电时长:"
                    android:textColor="@color/text_color_deep_gray"
                    android:textSize="@dimen/text_size_2"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginLeft="@dimen/margin_distance_1"
                    android:text="3小时"
                    android:textColor="@color/text_color_deep_gray"
                    android:textSize="@dimen/text_size_2"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_white"
                android:orientation="horizontal"
                android:paddingTop="@dimen/margin_distance_1"
                android:paddingLeft="@dimen/margin_distance_1"
                android:paddingRight="@dimen/margin_distance_1"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="充电时间:"
                    android:textColor="@color/text_color_deep_gray"
                    android:textSize="@dimen/text_size_2"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginLeft="@dimen/margin_distance_1"
                    android:text="2018-01-25 10:30"
                    android:textColor="@color/text_color_deep_gray"
                    android:textSize="@dimen/text_size_2"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_white"
                android:orientation="horizontal"
                android:paddingTop="@dimen/margin_distance_1"
                android:paddingLeft="@dimen/margin_distance_1"
                android:paddingRight="@dimen/margin_distance_1"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="总金额 :"
                    android:textColor="@color/text_color_deep_gray"
                    android:textSize="@dimen/text_size_2"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="25"
                    android:textColor="@color/text_color_deep_gray"
                    android:layout_marginLeft="@dimen/margin_distance_1"
                    android:textSize="@dimen/text_size_2"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_white"
                android:orientation="horizontal"
                android:paddingTop="@dimen/margin_distance_1"
                android:paddingLeft="@dimen/margin_distance_1"
                android:paddingRight="@dimen/margin_distance_1"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="实际付款:"
                    android:textColor="@color/text_color_deep_gray"
                    android:textSize="@dimen/text_size_2"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="20"
                    android:layout_marginLeft="@dimen/margin_distance_1"
                    android:textColor="@color/text_color_pink"
                    android:textSize="@dimen/text_size_2"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_white"
                android:orientation="horizontal"
                android:paddingTop="@dimen/margin_distance_1"
                android:paddingLeft="@dimen/margin_distance_1"
                android:paddingRight="@dimen/margin_distance_1"
                android:paddingBottom="@dimen/margin_distance_1"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="充电类型:"
                    android:textColor="@color/text_color_deep_gray"
                    android:textSize="@dimen/text_size_2"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="快充"
                    android:layout_marginLeft="@dimen/margin_distance_1"
                    android:textColor="@color/text_color_green"
                    android:textSize="@dimen/text_size_2"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/iv_item_myorder_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未充电"
            android:layout_gravity="center"
            android:padding="@dimen/margin_distance_2"
            android:textColor="@color/text_color_gray"
            android:textSize="@dimen/text_size_4"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_distance_1"
        android:background="@color/bg_home"
        />
</LinearLayout>