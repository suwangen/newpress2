<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              style="@style/MatchAndMatch.Vertical"
              android:fitsSystemWindows="true">

    <include layout="@layout/toolbar_common"/>


    <View style="@style/line_style"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_distance_1"
        android:visibility="gone"
        android:background="@color/bg_home"
        />
    <RelativeLayout
        android:id="@+id/secret_set_rl_not_allow_see_trends"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/common_margin_left"
        android:paddingRight="@dimen/common_margin_right"
        android:background="@drawable/selector_list_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="不给他(她)看动态"
            android:paddingBottom="@dimen/dimen_13"
            android:paddingTop="@dimen/dimen_13"
            android:textColor="@color/text_color_deep_gray"
            android:textSize="@dimen/text_size_2" />

        <TextView
            android:id="@+id/secret_set_tv_not_allow_see_trends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawablePadding="@dimen/margin_distance_1"
            android:drawableRight="@drawable/arrow_right"
            android:gravity="center_vertical"
            android:textColor="@color/text_color_deep_gray"
            android:textSize="@dimen/text_size_1" />
    </RelativeLayout>

    <View style="@style/line_style" />
    <RelativeLayout
        android:id="@+id/secret_set_rl_not_see_trends"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/common_margin_left"
        android:paddingRight="@dimen/common_margin_right"
        android:background="@drawable/selector_list_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/dimen_13"
            android:paddingTop="@dimen/dimen_13"
            android:text="不看他(她)动态"
            android:textColor="@color/text_color_deep_gray"
            android:textSize="@dimen/text_size_2" />

        <TextView
            android:id="@+id/secret_set_tv_not_see_trends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawablePadding="@dimen/margin_distance_1"
            android:drawableRight="@drawable/arrow_right"
            android:gravity="center_vertical"
            android:textColor="@color/text_color_deep_gray"
            android:textSize="@dimen/text_size_1" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_distance_1"
        android:background="@color/bg_home"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/common_margin_left"
        android:paddingRight="@dimen/common_margin_right"
        android:background="@color/bg_white"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/dimen_13"
            android:paddingTop="@dimen/dimen_13"
            android:text="仅好友可评论"
            android:textColor="@color/text_color_deep_gray"
            android:textSize="@dimen/text_size_2" />

        <ImageView
            android:id="@+id/secret_set_friends_can_discuss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/selector_setting_push"
            />
    </RelativeLayout>

    <View style="@style/line_style" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/common_margin_left"
        android:paddingRight="@dimen/common_margin_right"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/bg_white"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dimen_13"
            android:paddingTop="@dimen/dimen_13"
            android:gravity="center_vertical"
            android:text="仅好友可发送消息"
            android:textColor="@color/text_color_deep_gray"
            android:textSize="@dimen/text_size_2" />
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="1dp"
            />
        <ImageView
            android:id="@+id/secret_set_friends_can_send_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/selector_setting_push"
            />
    </LinearLayout>

    <View style="@style/line_style" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/bg_home"
        >
    </LinearLayout>
    <LinearLayout
        style="@style/MatchAndWrap.Vertical"
        android:id="@+id/lin_bottom">

    </LinearLayout>
</LinearLayout>