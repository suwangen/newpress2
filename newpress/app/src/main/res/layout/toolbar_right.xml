<?xml version="1.0" encoding="utf-8"?>
<com.shensou.newpress.widget.AutoToolbar xmlns:android="http://schemas.android.com/apk/res/android"
                                         xmlns:app="http://schemas.android.com/apk/res-auto"
                                         android:id="@+id/toolbar"
                                         android:layout_width="match_parent"
                                         android:layout_height="wrap_content"
                                         android:minHeight="@dimen/toolbar_height"
                                         android:background="@color/bg_white"
                                         app:contentInsetStart="0dp">

    <ImageView
        android:id="@+id/back"
        android:layout_width="90px"
        android:layout_height="90px"
        android:src="@drawable/back"
        android:scaleType="center"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/text_color_black"
        android:textSize="@dimen/text_middle_title"
        android:id="@+id/toolbar_title"
        android:layout_centerInParent="true"/>


    <TextView
        android:id="@+id/right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/common_margin_left"
        android:layout_gravity="right"
        android:textSize="@dimen/text_right_title"
        android:textColor="@color/text_color_deep_gray"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>

</com.shensou.newpress.widget.AutoToolbar>